extends ../layouts/common

block content
    h1 
        span.mr-2 Users
        a.btn.btn-primary(href="/users/create") New

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET")
            input(type="text", name="q", value=q ? q : '')
            button.btn.btn-primary.ml-2 Search

    table.table
        tr
            th Avatar
            th Name 
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src= user.image, alt="avatar", width= "50px", style="border-radius: 50%")
                td= user.name
                td= user.phone

                td
                    a.btn.btn-light(href='/users/' + user.id) View